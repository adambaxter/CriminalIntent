<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/crime_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/empty_crime_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_crime_list_text_view"
            android:textSize="18dp"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/empty_crime_list_add_crime_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_crime_list_add_crime_button"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp" />

    </LinearLayout>
</FrameLayout>